{
  "name": "@ninoop/tng-design-system",
  "version": "0.2.4",
  "private": false,
  "type": "module",
  "description": "Tng Design System - A React UI component library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ninooppgeorge/tng-design-system.git"
  },
  "homepage": "https://github.com/ninooppgeorge/tng-design-system",
  "bugs": {
    "url": "https://github.com/ninooppgeorge/tng-design-system/issues"
  },
  "files": [
    "dist",
    "theme.css",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/index.css",
    "./theme.css": "./theme.css",
    "./dist/tng-design-system.css": "./dist/tng-design-system.css"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run build:types && vite build",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "npm run build && npx changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "playwright": "^1.57.0",
    "storybook": "^10.1.11",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
